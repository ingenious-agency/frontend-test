<div class="container">
    <div class="columns">
        <div class="column col-12">
            <h1>{{#link-to "events" class="btn btn-link"}}<i class="icon icon-back"></i>{{/link-to}} Events</h1>
        </div>
    </div>
    <div class="columns">
        <div class="column col-xs-8 col-8">
            <h3 class="inline-block event-title mb-5">{{model.title}}</h3>
            <h6 class="inline-block event-title ml-10 mb-5">{{model.location}}</h6>
            <div class="divider mt-5"></div>
            <div>
                {{model.description}}
            </div>
        </div>
        <div class="column col-xs-4 col-4">
            <div class="divider" data-content="Event Image" ></div>
            <figure class="figure mb-10">
                <img src="{{model.eventImage}}" class="img-responsive col-12" />
            </figure>
            <div class="divider" data-content="Event Dates" ></div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each model.dates as |date|}}
                    <tr>
                        <td>{{date.date}}</td>
                        <td>{{date.time}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>